{
    "name": "sammyjo20/saloon",
    "description": "A Laravel/PHP package that allows you to write your API integrations or SDKs in a beautiful, standardised syntax.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "sammyjo20",
        "saloon",
        "sdk",
        "api",
        "api-integrations"
    ],
    "authors": [
        {
            "name": "Sam Carr√©",
            "email": "29132017+Sammyjo20@users.noreply.github.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/sammyjo20/saloon",
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.4",
        "spatie/macroable": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.5",
        "illuminate/collections": "^9.36",
        "league/flysystem": "^3.0",
        "nesbot/carbon": "^2.62",
        "pestphp/pest": "^1.21",
        "spatie/ray": "^1.33"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Sammyjo20\\Saloon\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sammyjo20\\Saloon\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "scripts": {
        "fix-code": [
            "./vendor/bin/php-cs-fixer fix"
        ],
        "test": [
            "./vendor/bin/pest"
        ]
    },
    "suggest": {
        "illuminate/collections": "Required if you want to use the collect() method on responses",
        "nesbot/carbon": "Required if you want to use the OAuth2 authentication"
    }
}
